@page "/create-game"
@page "/edit-game/{id:int}"
@inject IGameService GameService
@inject NavigationManager NavigationManager


@if (Id == null)
{
    <h3>Create Game</h3>
}
else
{
    <h3>Edit Game @game.Name</h3>
}

<EditForm Model="game" OnSubmit="handleSubmit" FormName="editGame">
    <label>Video Game Name</label>
    <InputText @bind-Value="game.Name">@game.Name</InputText>
    <button type="submit" class="btn btn-primary">Submit</button>

</EditForm>

    @code {

    [Parameter]
    public int? Id { get; set; }

    [SupplyParameterFromForm]
    Game game { get; set; } = new Game { Name = string.Empty };

    public Game? InputGame { get; set; }


    protected override async Task OnParametersSetAsync()
    {
        // Method for  get the data Game for show to the user in the view

        if (Id != null)
        {
            InputGame = game;
            game = await GameService.GetGameById((int)Id);
        }
    }

    async Task handleSubmit()
    {
        if (Id == null)
        {
            await GameService.AddGame(game);
        }
        else
        {
            
            await GameService.EditGame((int)Id,InputGame);
        }
        NavigationManager.NavigateTo("/games");
    }
}
